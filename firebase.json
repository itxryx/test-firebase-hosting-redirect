{
  "hosting": [
    {
      "target": "production",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/assets/**",
          "destination": "/assets/:splat"
        }
      ],
      "redirects": [
        {
          "source": "/((?!assets/).*)",
          "destination": "https://example.com",
          "type": 302
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "X-Robots-Tag",
              "value": "noindex, nofollow"
            }
          ]
        }
      ]
    },
    {
      "target": "staging",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/assets/**",
          "destination": "/assets/:splat"
        }
      ],
      "redirects": [
        {
          "source": "/((?!assets/).*)",
          "destination": "https://example.com",
          "type": 302
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "X-Robots-Tag",
              "value": "noindex, nofollow"
            },
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        }
      ]
    }
  ]
}